CC=gcc
CFLAGS=-Wall
LDFLAGS=-o $@
SOURCES=./source/
TYPE=.c
EXECUTABLE1=exec
EXECUTABLE2=manage

all: $(EXECUTABLE1) $(EXECUTABLE2)

$(EXECUTABLE1): $(SOURCES)$(EXECUTABLE1)$(TYPE)
	$(CC) $(LDFLAGS) $(SOURCES)$(EXECUTABLE1)$(TYPE) $(CFLAGS)

$(EXECUTABLE2): $(SOURCES)$(EXECUTABLE2)$(TYPE)
	$(CC) $(LDFLAGS) $(SOURCES)$(EXECUTABLE2)$(TYPE) $(CFLAGS)

clean:
	rm -f $(EXECUTABLE1) $(EXECUTABLE2)
